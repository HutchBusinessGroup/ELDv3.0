<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="72dp"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/lRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/swSerialNo"
            style="@style/list_serial_no"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/serial_no"
            android:gravity="center"
            android:layout_marginRight="12dp"
            android:textOff="1"
            android:textOn="" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLogDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11 Jan, 2016"
                android:textStyle="bold"
                style="@style/PhoneEventInformationTextStyle.xhdpi" />

            <TextView
                android:id="@+id/tvOdometerReading"
                style="@style/PhoneEventInformationTextStyle.xhdpi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fadingEdge="vertical"
                android:overScrollMode="ifContentScrolls"
                android:text="Odometer: 0 - 0" />

            <TextView
                android:id="@+id/tvLogData"
                style="@style/PhoneEventInformationTextStyle.xhdpi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:overScrollMode="ifContentScrolls"
                android:text="Distance: 0 KM, ShippintId: N/A, TrailerId: N/A" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
