<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.hutchgroup.elog.SetupWelcomeScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/setup_screen_full_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_percent_25"
        android:gravity="center"
        android:background="@drawable/setup_welcome_bg_white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:background="@drawable/setup_welcome_logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/width_percent_4"
        android:paddingRight="@dimen/width_percent_4"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_percent_8"
                android:gravity="top|center_horizontal"
                style="@style/WelcomeTitle.white"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="@dimen/height_percent_5"
                android:text="Welcome"/>

            <TextView
                android:id="@+id/tvAppVersion"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_percent_4"
                style="@style/WelcomeText"
                android:textSize="10sp"
                android:gravity="top|center_horizontal"
                android:text="Version"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/WelcomeText"
                android:textColor="#BFFFFFFF"
                android:layout_marginTop="@dimen/width_4"
                android:layout_marginBottom="@dimen/width_4"
                android:lineSpacingExtra="4dp"
                android:text="The system will guide you through step-by-step during the installation. The setup will perform following tasks:"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/width_4"
                android:layout_marginBottom="@dimen/width_4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/width_2"
                    android:layout_marginBottom="@dimen/width_2"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/width_8"
                        android:layout_height="@dimen/width_8"
                        android:layout_marginRight="@dimen/width_4"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/circle_button"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        style="@style/WelcomeText"
                        android:text="Network connectivity check"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/width_2"
                    android:layout_marginBottom="@dimen/width_2"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/width_8"
                        android:layout_height="@dimen/width_8"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/width_4"
                        android:background="@drawable/circle_button"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        style="@style/WelcomeText"
                        android:text="Hutch Systems connectivity check"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/width_2"
                    android:layout_marginBottom="@dimen/width_2"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/width_8"
                        android:layout_height="@dimen/width_8"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/width_4"
                        android:background="@drawable/circle_button"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        style="@style/WelcomeText"
                        android:text="Download configurations"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/width_2"
                    android:layout_marginBottom="@dimen/width_2"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/width_8"
                        android:layout_height="@dimen/width_8"
                        android:layout_marginRight="@dimen/width_4"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/circle_button"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        style="@style/WelcomeText"
                        android:text="BTB (Bluetooth Bridge) connectivity check"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/width_2"
                    android:layout_marginBottom="@dimen/width_2"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/width_8"
                        android:layout_height="@dimen/width_8"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/width_4"
                        android:background="@drawable/circle_button"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        style="@style/WelcomeText"
                        android:text="Finding GPS Satellite"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/WelcomeText"
                android:textColor="#BFFFFFFF"
                android:layout_marginTop="@dimen/width_4"
                android:layout_marginBottom="@dimen/width_4"
                android:text="Feel free to contact us at 604-776-3564, if you require our assistance."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_percent_10"
                style="@style/WelcomeText" android:visibility="gone"
                android:text="Please enter your installer ID below to continue"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width_4"
                android:layout_marginBottom="@dimen/width_4"
                android:gravity="center"
                android:layout_gravity="center"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/edInstallerID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Installer ID"
                    android:inputType="text"
                    android:imeActionLabel="@string/action_installer_id"
                    android:imeOptions="actionUnspecified"
                    android:maxLines="1"
                    android:ems="16"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/butGo"
                android:layout_width="@dimen/width_32"
                android:layout_height="@dimen/width_32"
                android:layout_marginTop="@dimen/height_percent_2"
                android:layout_marginBottom="@dimen/height_percent_2"
                android:background="@drawable/setup_screen_button_yellow"
                android:layout_gravity="center"
                android:elevation="6dp"
                android:src="@drawable/ic_arrow_next_white_48dp"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
