<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context="com.hutchgroup.elog.fragments.MessageFragment">

    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@drawable/message_screen_bg" />

    <ListView
        android:id="@+id/lvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="72dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:clickable="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/send_message_bg"
            android:hint="Type your message here"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="32dp"
            android:paddingTop="12dp"
            android:textSize="@dimen/font_size_14" />

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/blue_circle_bg"
            android:paddingBottom="14dp"
            android:paddingLeft="16dp"
            android:paddingRight="12dp"
            android:paddingTop="14dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_send_white_24dp" />
    </LinearLayout>


</FrameLayout>
