<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.hutchgroup.elog.fragments.GpsSignalFragment">

    <TextView
        style="@style/SetupTitle2"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="48dp"
        android:text="Global Position Satellite Check..." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingRight="@dimen/width_8"
                android:paddingBottom="16dp"
                android:paddingLeft="@dimen/width_8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icFindingSatellite"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/ic_setup_processing" />

                        <TextView
                            android:id="@+id/tvFindingSatellite"
                            style="@style/SetupList"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="GPS Satellite"
                            android:textColor="@color/green2"
                            android:textSize="@dimen/text_size_13" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvFindingSatelliteValue"
                        style="@style/SetupList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="28dp"
                        android:text="3D"
                        android:textSize="@dimen/text_size_15"
                        android:textColor="@color/green2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icCheckingUTCTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/ic_setup_passed" />

                        <TextView
                            android:id="@+id/tvCheckingUTCTime"
                            style="@style/SetupList"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="UTC Time  "
                            android:textColor="@color/green2"
                            android:textSize="@dimen/text_size_13" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvCheckingUTCTimeValue"
                        style="@style/SetupList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="28dp"
                        android:text="14:25"
                        android:textSize="@dimen/text_size_15"
                        android:textColor="@color/green2" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icCheckingLatitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/ic_setup_passed" />

                        <TextView
                            android:id="@+id/tvCheckingLatitude"
                            style="@style/SetupList"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Latitude"
                            android:textColor="@color/green2"
                            android:textSize="@dimen/text_size_13" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvCheckingLatitudeValue"
                        style="@style/SetupList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="28dp"
                        android:text="50.082393"
                        android:textSize="@dimen/text_size_15"
                        android:textColor="@color/green2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icCheckingLongitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/ic_setup_processing" />

                        <TextView
                            android:id="@+id/tvCheckingLongitude"
                            style="@style/SetupList"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Longitude "
                            android:textColor="@color/green2"
                            android:textSize="@dimen/text_size_13" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvCheckingLongitudeValue"
                        style="@style/SetupList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="28dp"
                        android:text="-120.039063"
                        android:textSize="@dimen/text_size_15"
                        android:textColor="@color/green2" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icCheckingLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/ic_setup_passed" />

                    <TextView
                        android:id="@+id/tvCheckingLocation"
                        style="@style/SetupList"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Current Location "
                        android:textColor="@color/green2"
                        android:textSize="@dimen/text_size_13" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvCheckingLocationValue"
                    style="@style/SetupList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="28dp"
                    android:text=""
                    android:textColor="@color/green2"
                    android:textSize="@dimen/text_size_15" />

            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/width_4"
                android:paddingRight="@dimen/width_4">

                <LinearLayout
                    style="@style/Thead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        style="@style/TableTH"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="PRN" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >
                    <TextView
                        style="@style/TableTH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GNSS" />
                    </LinearLayout>

                    <TextView
                        style="@style/TableTH"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SNR" />

                    <TextView
                        style="@style/TableTH"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Elev" />

                    <TextView
                        style="@style/TableTH"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Azim" />

                    <TextView
                        style="@style/TableTH"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Flags" />
                </LinearLayout>

                <ListView
                    android:id="@+id/sv_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                </ListView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <ImageButton
        android:id="@+id/butGPSNext"
        android:layout_width="@dimen/width_32"
        android:layout_height="@dimen/width_32"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/width_4"
        android:layout_marginTop="@dimen/width_4"
        android:background="@drawable/setup_screen_button"
        android:elevation="6dp"
        android:src="@drawable/ic_arrow_next_white_48dp" />


</LinearLayout>