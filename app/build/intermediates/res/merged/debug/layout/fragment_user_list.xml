<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hutchgroup.elog.fragments.UserListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgBack"
            android:layout_width="@dimen/width_32"
            android:layout_height="@dimen/width_32"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:hint="Search user"
            android:paddingRight="24dp"
            android:textSize="@dimen/text_size_14"
            android:visibility="gone" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lvUser"
            android:layout_width="match_parent"
            android:dividerHeight="1dp"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:listSelector="@android:color/transparent"></ListView>




        <ImageButton
            android:id="@+id/fab"
            android:layout_width="@dimen/fab_size"
            android:layout_height="@dimen/fab_size"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="@dimen/fab_margin_right"
            android:layout_marginBottom="@dimen/fab_margin_bottom"
            android:background="@drawable/custom_fab_button_bg"
            android:src="@drawable/ic_fab_search" />
    </FrameLayout>

</LinearLayout>
