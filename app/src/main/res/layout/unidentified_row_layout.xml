<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/lRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/swEventCode"
            style="@style/list_serial_no"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:background="@drawable/serial_no"
            android:gravity="center"
            android:textOff="D"
            android:textOn="" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEventDescription"
                android:textStyle="bold"
                style="@style/PhoneEventInformationTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:text="Authenticated Driver's ELD login activity" />

            <TextView
                android:id="@+id/tvOdometerReading"
                style="@style/PhoneEventInformationTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fadingEdge="vertical"
                android:overScrollMode="ifContentScrolls"
                android:text="Odometer: 96486464" />

            <TextView
                android:id="@+id/tvLocationDescription"
                style="@style/PhoneEventInformationTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="33443 Kirk avenue, abbostford, BC" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTime"
                style="@style/ListTopRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04:25 AM" />
            <TextView
                android:id="@+id/tvDate"
                style="@style/ListTopRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Jan 28, 2016" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
