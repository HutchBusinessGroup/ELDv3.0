<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/tvSerialNo"
            style="@style/list_serial_no"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:background="@drawable/serial_no"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/tvSPNDescription"
                style="@style/PhoneEventInformationTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Engine Fuel Filter Differential Pressure"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFMIDescription"
                style="@style/PhoneEventInformationTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fadingEdge="vertical"
                android:overScrollMode="ifContentScrolls"
                android:text="Below Normal Operational Range - Moderate" />

            <TextView
                android:id="@+id/tvOccurence"
                style="@style/PhoneEventInformationTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Occurence: 2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTime"
                style="@style/ListTopRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04:25 AM" />

            <TextView
                android:id="@+id/tvDate"
                style="@style/ListTopRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Jan 28, 2016" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
