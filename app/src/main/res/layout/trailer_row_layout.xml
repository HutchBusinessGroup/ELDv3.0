<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/read_msg_bg_color"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvUnitNo"
        style="@style/list_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text="Unit: T132" />

    <TextView
        android:id="@+id/tvPlateNo"
        style="@style/list_subtitle_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text="PlateNo: V2T32" />

    <View
        style="@style/SettingSeprator.MarginLeft0"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
</LinearLayout>
