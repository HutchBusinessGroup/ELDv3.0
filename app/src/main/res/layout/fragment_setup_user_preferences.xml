<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hutchgroup.elog.SetupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layoutTimeZone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lHawaii"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_row"
                android:elevation="2dp"
                android:orientation="vertical">
                <TextView
                    style="@style/list_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Hawaii Time"
                    android:textSize="20sp"/>
                <TextView
                    style="@style/list_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="UTC-10:00"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lAlaska"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_row"
                android:elevation="2dp"
                android:orientation="vertical">
                <TextView
                    style="@style/list_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Alaska Time"
                    android:textSize="20sp"/>
                <TextView
                    style="@style/list_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="UTC-09:00"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lPacific"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_row"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    style="@style/list_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Pacific Time"
                    android:textSize="20sp"/>
                <TextView
                    style="@style/list_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="UTC-08:00"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lMountain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_row"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    style="@style/list_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Mountain Time"
                    android:textSize="20sp"/>
                <TextView
                    style="@style/list_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="UTC-07:00"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lCentral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_row"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    style="@style/list_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Central Time"
                    android:textSize="20sp"/>
                <TextView
                    style="@style/list_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="UTC-06:00"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lEastern"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_row"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    style="@style/list_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Eastern Time"
                    android:textSize="20sp"/>
                <TextView
                    style="@style/list_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="UTC-05:00"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lAlantic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_row"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    style="@style/list_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Alantic Time"
                    android:textSize="20sp"/>
                <TextView
                    style="@style/list_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="UTC-04:00"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lNewfoundland"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_row"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    style="@style/list_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Newfoundland Time"
                    android:textSize="20sp"/>
                <TextView
                    style="@style/list_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="UTC-03:30"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lWestGreenland"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_row"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    style="@style/list_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="West Greenland Time"
                    android:textSize="20sp"/>
                <TextView
                    style="@style/list_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="UTC-03:00"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lSaintPierre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_row"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    style="@style/list_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Saint Pierre and Miquelon Time"
                    android:textSize="20sp"/>
                <TextView
                    style="@style/list_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="UTC-03:00"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lEastGreenland"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_row"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    style="@style/list_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="East Greenland Time"
                    android:textSize="20sp"/>
                <TextView
                    style="@style/list_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="UTC-01:00"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layoutUserPreferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/time_zone"
            style="@style/TextLabelStyle" />

        <TextView
            android:id="@+id/edTimeZone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BigTextLabelStyle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_cycle"
            style="@style/TextLabelStyle" />

        <TextView
            android:id="@+id/edDefaultRule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BigTextLabelStyle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/unit_no"
            style="@style/TextLabelStyle" />

        <EditText
            android:id="@+id/edUnitNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_time"
            style="@style/TextLabelStyle" />

        <TextView
            android:id="@+id/edStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12:00 AM"
            style="@style/BigTextLabelStyle" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btnNext"
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_bg"
            android:text="Done" />
    </LinearLayout>
</LinearLayout>
