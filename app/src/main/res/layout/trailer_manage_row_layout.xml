<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tpms_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvBackTire"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layoutSingleAxle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgSingleTire1"
            android:layout_width="@dimen/tpms_tyre_width"
            android:layout_height="@dimen/tpms_tyre_height"
            android:background="@android:color/transparent"
            android:src="@drawable/gray_tire" />


        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"></View>


        <ImageView
            android:id="@+id/imgSingleTire2"
            android:layout_width="@dimen/tpms_tyre_width"
            android:layout_height="@dimen/tpms_tyre_height"
            android:background="@android:color/transparent"
            android:src="@drawable/error_tire" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutDoubleAxle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone">


        <ImageView
            android:id="@+id/imgTire1"
            android:layout_width="@dimen/tpms_tyre_width"
            android:layout_height="@dimen/tpms_tyre_height"
            android:background="@android:color/transparent"
            android:src="@drawable/gray_tire" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="@dimen/tpms_tyre_jointer_height"
            android:layout_gravity="center_vertical"
            android:background="@drawable/tyre_jointer"></ImageView>

        <ImageView
            android:id="@+id/imgTire2"
            android:layout_width="@dimen/tpms_tyre_width"
            android:layout_height="@dimen/tpms_tyre_height"
            android:background="@android:color/transparent"
            android:src="@drawable/gray_tire" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"></View>

        <ImageView
            android:id="@+id/imgTire3"
            android:layout_width="@dimen/tpms_tyre_width"
            android:layout_height="@dimen/tpms_tyre_height"
            android:background="@android:color/transparent"
            android:src="@drawable/gray_tire" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="@dimen/tpms_tyre_jointer_height"
            android:layout_gravity="center_vertical"
            android:background="@drawable/tyre_jointer"></ImageView>

        <ImageView
            android:id="@+id/imgTire4"
            android:layout_width="@dimen/tpms_tyre_width"
            android:layout_height="@dimen/tpms_tyre_height"
            android:background="@android:color/transparent"
            android:src="@drawable/error_tire" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutEmpty"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/layout_bg_round_nine"
        android:gravity="center"
        android:visibility="gone">

        <Button
            android:id="@+id/btnHook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hook" />
    </LinearLayout>
</LinearLayout>