<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/tpms_bg"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvBackTire"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layoutSingleAxle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvSinglePressure1"
            style="@style/TPMSValue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tpms_value_height"
            android:background="@drawable/tpms_value_bg_white"
            android:gravity="center"
            android:text="32" />

        <TextView
            android:id="@+id/tvSingleTemperature1"
            style="@style/TPMSTemp.Green"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tpms_temp_height"
            android:layout_marginBottom="62dp"
            android:background="@drawable/tpms_temp_bg_white"
            android:gravity="center"
            android:text="75° F" />

        <ImageView
            android:id="@+id/imgSingleTire1"
            android:layout_width="@dimen/tpms_tyre_height"
            android:layout_height="@dimen/tpms_tyre_width"
            android:layout_marginBottom="140dp"
            android:layout_marginLeft="3dp"
            android:background="@android:color/transparent"
            android:src="@drawable/gray_tire" />

        <ImageView
            android:id="@+id/imgSingleTire2"
            android:layout_width="@dimen/tpms_tyre_height"
            android:layout_height="@dimen/tpms_tyre_width"

            android:layout_marginBottom="100dp"
            android:layout_marginLeft="3dp"
            android:background="@android:color/transparent"
            android:src="@drawable/error_tire" />


        <TextView
            android:id="@+id/tvSinglePressure2"
            style="@style/TPMSValue.White"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tpms_value_height"
            android:background="@drawable/tpms_value_bg_red"
            android:gravity="center"
            android:text="32" />

        <TextView
            android:id="@+id/tvSingleTemperature2"
            style="@style/TPMSTemp.Green"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tpms_temp_height"
            android:background="@drawable/tpms_temp_bg_white"
            android:gravity="center"
            android:text="75° F" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutDoubleAxle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvPressure1"
            style="@style/TPMSValue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tpms_value_height"
            android:background="@drawable/tpms_value_bg_white"
            android:gravity="center"
            android:text="32" />

        <TextView
            android:id="@+id/tvTemperature1"
            style="@style/TPMSTemp.Green"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tpms_temp_height"
            android:background="@drawable/tpms_temp_bg_white"
            android:gravity="center"
            android:text="75° F" />

        <TextView
            android:id="@+id/tvPressure2"
            style="@style/TPMSValue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tpms_value_height"
            android:background="@drawable/tpms_value_bg_white"
            android:gravity="center"
            android:text="32" />

        <TextView
            android:id="@+id/tvTemperature2"
            style="@style/TPMSTemp.Green"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tpms_temp_height"
            android:layout_marginBottom="5dp"
            android:background="@drawable/tpms_temp_bg_white"
            android:gravity="center"
            android:text="75° F" />

        <ImageView
            android:id="@+id/imgTire1"
            android:layout_width="@dimen/tpms_tyre_height"
            android:layout_height="@dimen/tpms_tyre_width"
            android:background="@android:color/transparent"
            android:src="@drawable/gray_tire" />

        <ImageView
            android:layout_width="@dimen/tpms_tyre_height"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/tyre_jointer"></ImageView>

        <ImageView
            android:id="@+id/imgTire2"
            android:layout_width="@dimen/tpms_tyre_height"
            android:layout_height="@dimen/tpms_tyre_width"
            android:layout_marginBottom="100dp"
            android:background="@android:color/transparent"
            android:src="@drawable/gray_tire" />

        <ImageView
            android:id="@+id/imgTire3"
            android:layout_width="@dimen/tpms_tyre_height"
            android:layout_height="@dimen/tpms_tyre_width"
            android:background="@android:color/transparent"
            android:src="@drawable/gray_tire" />

        <ImageView
            android:layout_width="@dimen/tpms_tyre_height"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/tyre_jointer"></ImageView>

        <ImageView
            android:id="@+id/imgTire4"
            android:layout_width="@dimen/tpms_tyre_height"
            android:layout_height="@dimen/tpms_tyre_width"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/error_tire" />

        <TextView
            android:id="@+id/tvPressure3"
            style="@style/TPMSValue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tpms_value_height"
            android:background="@drawable/tpms_value_bg_white"
            android:gravity="center"
            android:text="32" />

        <TextView
            android:id="@+id/tvTemperature3"
            style="@style/TPMSTemp.Green"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tpms_temp_height"
            android:background="@drawable/tpms_temp_bg_white"
            android:gravity="center"
            android:text="75° F" />

        <TextView
            android:id="@+id/tvPressure4"
            style="@style/TPMSValue.White"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tpms_value_height"
            android:background="@drawable/tpms_value_bg_red"
            android:gravity="center"
            android:text="32" />

        <TextView
            android:id="@+id/tvTemperature4"
            style="@style/TPMSTemp.Green"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tpms_temp_height"
            android:background="@drawable/tpms_temp_bg_white"
            android:gravity="center"
            android:text="75° F" />

    </LinearLayout>

</LinearLayout>